@model IEnumerable<BookStore.Data.Entities.Author>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="bg-dark text-white text-center p-3">Authors List</h1>

<div class="custom-container">
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th></th>
                <th></th>
                <th colspan="3">
                    <a asp-action="Create" class="btn btn-success btn-block"> <i class="fas fa-plus"></i> Create New Author</a>
                </th>
            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th style="width: 40%;">
                    @Html.DisplayNameFor(model => model.ShortDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Popularity)
                </th>
                <th colspan="3">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShortDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Popularity)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-block btn-primary"> <i class="fas fa-edit"></i> &nbsp; Edit</a>
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-block btn-info"> <i class="fas fa-info-circle"></i> &nbsp; Details</a>
                    </td>
                    <td>
                        @if (ViewContext.HttpContext.User.IsInRole("editor"))
                        {

                        }
                        else
                        {
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-block btn-danger"> <i class="fas fa-trash-alt"></i> &nbsp; Delete</a>
                        }

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
